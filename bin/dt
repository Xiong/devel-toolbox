use 5.016002;   # 5.16.2    # 2012  # __SUB__
use strict;
use warnings;
use version; our $VERSION = qv('v0.0.0');

# Core modules
use lib 'lib';

# Project module
use Devel::Toolbox;             # Simple custom project tool management

# Alternate uses
#~ use Devel::Comments '###';                                               #~
#~ use Devel::Comments '###', ({ -file => 'debug.log' });                   #~

## use
#============================================================================#

### @ARGV

# Define pool first; we may need it to set up Getopt::*. 
our $U      = {};                                   #    $::U or $main::U
Devel::Toolbox::Core::Pool::init_global_pool($U);   # minimum initialization

# get options
my $option  = {};               # none for now; no need for Getopt::*
my @words   = @ARGV;            # copy
my $words   = \@words;          # not ref to special global

Devel::Toolbox::Core::Pool::merge_global_pool({
        -script     => {
            -cmdline_opt    => $option,  # hashref
            -cmdline_words  => $words,   # aryref
        },
    });
### $U

my $perl_exit   = Devel::Toolbox::Core::App::app_execute({});   # 1 for okay
my $shell_exit  = not $perl_exit;
exit $shell_exit;                                               # 0 for okay

__END__

