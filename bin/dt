use 5.016002;   # 5.16.2    # 2012  # __SUB__
use strict;
use warnings;
use version; our $VERSION = qv('v0.0.0');

# Core modules
use lib 'lib';

# Project module
use Devel::Toolbox;             # Simple custom project tool management

# Alternate uses
use Devel::Comments '###';                                               #~
#~ use Devel::Comments '###', ({ -file => 'debug.log' });                   #~

## use
#============================================================================#

### @ARGV

# Construct first if we need the object to set up Getopt::*. 
my $self    = Devel::Toolbox::Core::Base->new();

# get options
my $option  = {};           # none for now; no need for Getopt::*
my @words   = @ARGV;        # copy
my $words   = \@words;      # not ref to special global

$self->init({
        -script     => {
            -cmdline_opt    => $option,  # hashref
            -cmdline_words  => $words,   # aryref
        },
    });
### $self

claim '::Core::App';
my $exit_code   = $self->app_execute({}) or 0;
exit $exit_code;

__END__

